{
  "name": "crossdev3",
  "version": "0.0.0",
  "main": "build-electron/electron-main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:electron": "rm -rf build-electron && tsc --project tsconfig.electron.json",
    "electron": "electron build-electron/electron-main.js",
    "electron:dev": "concurrently \"npm run watch\" \"npm run build:electron && wait-on file:./dist/index.html && npm run electron\"",
    "package": "electron-builder"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "electron-store": "^8.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.3",
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.0",
    "@types/node": "^20.19.26",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.crossdev3.app",
    "productName": "CrossDev3",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "release"
    },
    "files": [
      "build-electron/**/*",
      "dist/**/*",
      "preload.js"
    ],
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "squirrelWindows": {
      "iconUrl": "https://icon-icons.com/download-file?file=https%3A%2F%2Fimages.icon-icons.com%2F3053%2FICO%2F512%2Fcalculator_macos_bigsur_icon_190313.ico"
    }
  }
}
